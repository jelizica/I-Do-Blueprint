# LLM Council Aliases and Functions
# Add to ~/.zshrc or source this file: source .zshrc-additions

# Short command to run council queries
alias council='./scripts/council'

# Quick Stage 1 query (fastest)
council1() {
    ./scripts/council --stage1 "$@"
}

# Full council with timeout
council-full() {
    ./scripts/council --timeout=300 "$@"
}

# Save to log
council-save() {
    ./scripts/council --save-log "$@"
}

# List saved conversations
council-list() {
    echo "To list conversations, use in Claude Code CLI:"
    echo "  mcp__llm-council__council_list_conversations()"
}

# Get conversation by ID
council-get() {
    if [ -z "$1" ]; then
        echo "Usage: council-get <conversation_id>"
        echo "Get conversation ID from council-list first"
        return 1
    fi
    echo "To get conversation $1, use in Claude Code CLI:"
    echo "  mcp__llm-council__council_get_conversation(conversation_id: \"$1\")"
}

# Show help
council-help() {
    ./scripts/council --help
    echo ""
    echo "Shortcut Functions:"
    echo "  council \"question\"          - Full council deliberation"
    echo "  council1 \"question\"         - Stage 1 only (faster)"
    echo "  council-full \"question\"     - Full with extended timeout"
    echo "  council-save \"question\"     - Save to log file"
    echo "  council-list                 - List saved conversations"
    echo "  council-get <id>             - Get conversation by ID"
}

# Add to PATH if not already there
if [[ ":$PATH:" != *":$PWD/scripts:"* ]]; then
    export PATH="$PWD/scripts:$PATH"
fi

echo "âœ“ LLM Council shortcuts loaded!"
echo "  Run: council-help for usage"
